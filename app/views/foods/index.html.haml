- @food.each_slice(3) do |foods|
	- foods.each do |food|
		.col-md-4
			.destination
				.image_wrapper
					= link_to food do
						= image_tag food.image.url(:medium)
				%h2= link_to food.name, food

.row
	.col-md-12
		= link_to "Back", root_path, class: "btn btn-default"


