<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>


.row
	.col-md-12
		= link_to "New Library", 'libraries/new', class: "btn btn-default"

%br

.row
	- @library.each_slice(3) do |libraries|
		- libraries.each do |library|
			.col-md-4
				.destination
					.image_wrapper
						= link_to library do
							= image_tag library.image.url(:medium)
					%h2= link_to library.name, library

.row
	.col-md-12
		= link_to "Back", root_path, class: "btn btn-default"


