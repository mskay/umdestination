<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

.main_content
	#destination_top.row
		.col-md-4
			= image_tag @favorite.image.url(:medium), class: "destination_image"
		.col-md-8
			#destination_info
				%h1= @favorite.name
				%p.description= @favorite.description 
				%p.description
					= @current_location 
					>
					= @favorite.address
					%br
					= @favorite.longitude
					= @favorite.latitude
					%br
						%br
							= @user_ip
	.row
		.col-md-4
			#map
		.col-md-8
			#directions
				%h2 Directions
				%ul
					

	.row
		.col-md-12
			= link_to "Back", '/favorites', class: "btn btn-default"
			- if user_signed_in?
				= link_to "Edit", edit_favorite_path, class: "btn btn-default"
				= link_to "Delete", favorite_path, method: :delete, data: {confirm: "Are you sure?" }, class: "btn btn-default"



