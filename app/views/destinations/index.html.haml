- @destination.each_slice(3) do |destinations|
	- destinations.each do |destination|
		.col-md-4
			.destination
				.image_wrapper
					= link_to destination do
						= image_tag destination.image.url(:medium)
				%h2= link_to destination.title.capitalize, destination
	


%h2= @user_ip
%h2= @locate_ip
%br
%br
%h1= @building.body
%h2= @response




